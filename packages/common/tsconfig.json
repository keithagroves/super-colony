{
    "compilerOptions": {
      "rootDir": "src",
      "outDir": "build",
      "module": "commonjs",
      "skipLibCheck": true,
      "esModuleInterop": true,
      "lib": [
        "dom",
        "dom.iterable",
        "es2015",
        "es2015.iterable"
      ],
      "target": "es2015",
      "strict": true,
      "declaration": true,
      "jsx": "react",
      "sourceMap": true,
      "resolveJsonModule": true
