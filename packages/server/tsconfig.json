{
    "compilerOptions": {
      "outDir": "build",
      "module": "commonjs",
      "lib": [
        "es6",
        "dom"
      ],
      "baseUrl": "./src",
      "target": "es2016",
      "declaration": true,
      "resolveJsonModule": true,
      "noImplicitAny": false,
      "allowSyntheticDefaultImports": true,
      "experimentalDecorators": true,
      "sourceMap": false,
      "paths": {
        "game/*": ["game/*"],
        "room/*": ["room/*"],
        "@adventurers/common": ["../common/src/*"]
      }
    },
    "include": [
      "src"
    ],
    "exclude": [
      "node_modules",
      "build"
    ]
  }
  